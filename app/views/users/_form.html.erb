<div class= "container" >
	

<div class="row justify-content-center">
	<div class="col-10">
		<%= render 'shared/errors', obj: @user %>

	<%= form_with(model: @user,class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
	<div class="form-group row" >
		<%= f.label :fistname, class: "col-2 col-form-label text-light" %>
			<div class= "col-10"> 
				<%=f.text_field :fistname ,class: "form-control shadow rounded",placeholder: "Enter firstname of user"%>
			</div>
	</div>

	<div class="form-group row" >
		<%= f.label :lastname , class: "col-2 col-form-label text-light"%>
			<div class= "col-10">
				<%=f.text_field :lastname ,class: "form-control shadow rounded",placeholder: "Enter lastname of user"%>
			</div>
	</div>

	<div class="form-group row" >
		<%= f.label :email , class: "col-2 col-form-label text-light"%>
			<div class= "col-10">
				<%=f.email_field :email ,class: "form-control shadow rounded",placeholder: "Enter email address of user"%>
			</div>
	</div>

	<div class="form-group row" >
		<%= f.label :age , class: "col-2 col-form-label text-light"%>
			<div class= "col-10">
				<%=f.text_field :age ,class: "form-control shadow rounded",placeholder: "Enter age of user"%>
			</div>
	</div>

	<div class="form-group row" >
		<%= f.label :phone_no , class: "col-2 col-form-label text-light"%>
			<div class= "col-10">
				<%=f.text_field :phone_no ,class: "form-control shadow rounded",placeholder: "Enter phone number of user"%>
			</div>
	</div>


	<div class="form-group row" >
		<%= f.label :password , class: "col-2 col-form-label text-light"%>
			<div class= "col-10">
				<%=f.password_field :password ,class: "form-control shadow rounded",placeholder: "Choose a password"%>
			</div>
	</div>


	<div class="form-group row justify-content-center" >
		<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
	</div>
	<% end %>

	</div>
	<div class="mb=3">
	<%= link_to'[Cancel and return to articles listing]', articles_path , class: "text-info"%>
</div>
</div>
</div>